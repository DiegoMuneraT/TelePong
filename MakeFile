# Nombre del servidor y el compilador
SERVER = Servidor/server
CC = gcc

# Opciones de compilacion
CFLAGS = -pthread

# Fuentes y objetos
SRC = Servidor/server.c
OBJ = $(SRC:.c=.o)

# Objetivos
all: $(SERVER)

$(SERVER): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o : %.c
	$(CC) $(CFLAGS) -c -o $@ $<

run: $(SERVER)
	./$(SERVER) 8080 logFile

clean:
	rm -f $(SERVER) $(OBJ)

.PHONY: all clean run
